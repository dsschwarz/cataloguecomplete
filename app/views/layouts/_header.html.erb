<nav class="navbar navbar-default" role="navigation" style="margin-bottom: 0px;">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#catalogue-collapse">
        <span class="sr-only">Catalogue</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">CC</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="catalogue-collapse">
      <% if signed_in? %>
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input id="search-catalogue-input" type="text" class="form-control" name="tags" placeholder="Search Catalogue"
          <% if params[:tags] %>
            value="<%= params[:tags] %>"
          <% end %>
          >
        </div>
        <button id="search-catalogue" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li> <%= link_to "Catalogue", articles_path %> </li>
        <li> <%= link_to "Users", users_path %> </li>
        <li> <%= link_to "Sign out", signout_path %> </li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign in", signin_path%></li>
      </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->

</nav>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= value %>
    </div>
  <% end %>

<script type="text/javascript">
  $("#search-catalogue").click(function(ev){
    window.location.href = window.location.origin + "?tags=" + $("#search-catalogue-input").val();
    ev.preventDefault();
  })
</script>
